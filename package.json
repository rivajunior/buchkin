{
	"name": "buchkin",
	"version": "0.0.0",
	"description": "A Munchkin game admin",
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/rivajunior/buchkin.git"
	},
	"keywords": [
		"munchkin"
	],
	"author": "Riva Junior",
	"bugs": {
		"url": "https://github.com/rivajunior/buchkin/issues"
	},
	"homepage": "https://github.com/rivajunior/buchkin#readme",
	"module": "true",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"start": "wireit",
		"build": "wireit",
		"serve": "wireit",
		"lint": "wireit",
		"test": "wireit",
		"coverage": "wireit"
	},
	"license": "MIT",
	"devDependencies": {
		"@solidjs/testing-library": "^0.6.1",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/user-event": "^14.4.3",
		"@types/node": "^18.14.6",
		"@types/testing-library__jest-dom": "^5.14.5",
		"@typescript-eslint/eslint-plugin": "^5.53.0",
		"@typescript-eslint/parser": "^5.53.0",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-config-xo": "^0.43.1",
		"eslint-config-xo-typescript": "^0.56.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-solid": "^0.10.0",
		"eslint-plugin-testing-library": "^5.10.2",
		"eslint-plugin-tsdoc": "^0.2.17",
		"eslint-plugin-unicorn": "^45.0.2",
		"jsdom": "^21.1.0",
		"postcss": "^8.4.21",
		"prettier": "^2.8.4",
		"prettier-plugin-tailwindcss": "^0.2.4",
		"rollup-plugin-gzip": "^3.1.0",
		"tailwindcss": "^3.2.7",
		"typescript": "^4.9.5",
		"vite": "^4.1.4",
		"vite-plugin-solid": "^2.5.0",
		"vitest": "^0.29.2",
		"wireit": "^0.9.5"
	},
	"dependencies": {
		"solid-js": "^1.6.11"
	},
	"wireit": {
		"start": {
			"command": "vite"
		},
		"build": {
			"command": "vite build"
		},
		"serve": {
			"command": "vite preview"
		},
		"lint": {
			"command": "eslint -f unix \"src/**/*.{ts,tsx}\""
		},
		"test": {
			"command": "vitest"
		},
		"coverage": {
			"command": "vitest run --coverage"
		}
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"rollup",
				"@testing-library/dom"
			]
		},
		"overrides": {
			"@types/jest": "./types/jest"
		}
	},
	"engines": {
		"node": ">=18",
		"pnpm": ">=7"
	}
}
